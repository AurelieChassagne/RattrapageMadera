{% extends "layout.html.twig" %}

{% block title %}Clients{% endblock %}

{% block content %}

<div class="well">
    <article>
        <h2><a class="clientTitle" href="">{{ clients.nom }}</a></h2>
        <p>prenom : {{ clients.prenom }}</p>
        <p>mail : {{ clients.mail }}</p>
        <p>telephone : {{ clients.telephone }}</p>
        <p>adresse : {{ clients.adresse }}</p>
        <p>codePostal : {{ clients.codePostal }}</p>
        <p>ville : {{ clients.ville }}</p>
    </article>
</div>


<a style="float: right; margin : 1%; " class="btn btn-default" href="{{   path('clients') }}"><span class="glyphicon glyphicon-menu-left"></span> Retour</a>
{% endblock %}